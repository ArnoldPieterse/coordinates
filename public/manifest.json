    "related_applications": [
        {
            "platform": "webapp",
            "url": "https://www.rekursing.com"
        }
    ],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "handle_links": "preferred",
    "protocol_handlers": [
        {
            "protocol": "web+coordinates",
            "url": "/game/?planet=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/game/",
            "accept": {
                "application/json": [".json"],
                "text/plain": [".txt"]
            }
        }
    ],
    "share_target": {
        "action": "/share/",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "permissions": [
        "geolocation",
        "notifications",
        "background-sync"
    ],
    "features": [
        "Cross Platform",
        "Multiplayer",
        "AI Integration",
        "Procedural Generation"
    ],
    "developer": {
        "name": "Coordinates Team",
        "url": "https://www.rekursing.com"
    }
} 