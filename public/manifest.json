                {
                    "src": "/assets/shortcut-play.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Game Demo",
            "short_name": "Demo",
            "description": "Try the game demo",
            "url": "/demo/",
            "icons": [
                {
                    "src": "/assets/shortcut-demo.png",
                    "sizes": "96x96"
                }
            ]
